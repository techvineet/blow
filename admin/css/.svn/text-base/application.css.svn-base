body{
	padding:0px;
	font-family: Arial, Helvetica, sans-serif;
	font-size:15px;
}

#super_container
{
	margin-left:auto;
	margin-right:auto;
	padding:2px;
	width: 1000px;
	border: 2px inset #AABBCC;
}

#header
{
	padding:5px;
	background-color:#B8860B;
}

#footer 
{
	background-color:#FFFFFF;
	border-top:1px solid black;
	color:#103843;
	font-family:Arial,Verdana,Helvetica,sans-serif;
	font-size:12px;
	font-weight:bold;
	height:23px;
	padding-top:5px;
}

div.content{
	margin: 5px;
}


div.main{
	
}

.questToolbar{
	background-color:#FFF8DC;
	width: 74px;
	height: auto;
	padding: 5px;
	border: 2px solid #DEB887;
	text-align: center;
	float:left;
}

.question{
	background-color:#8B0000;
	width: 50px;
	height: 50px;
	border: 2px solid #FF0000;
	margin: 10px;
	font-size:large;
	color: white;
	font-weight: bold;
}

.testCanvasMain{
	background-color:#FFF8DC;
	width: 800px;
	height: auto;
	padding: 5px;
	border: 2px solid #DEB887;
	margin-left: 75px;
	float: left;
}

.canvasHeading{
	background-color:#B8860B;
	color:white;
	width:775px;
	margin-top:2px;
	padding: 4px;
}

input[type="text"]{
	height: 15px;
}

#testCanvas{
	width: 775px;
	max-height: 12cm;
	padding: 4px;
	border: 3px groove #DEB887;
	margin-top: 10px;
	overflow:auto;
}

.questionHandle{
	background-color:#DDDDDD;
	padding: 3px;
	border-bottom: 2px solid #666666;
	cursor:move;
}

.sortableQuestion{
	border: 2px solid #666666;
	margin-top:5px;
}

.questionContent{
	padding: 5px;
}

.error{
	border-color: red;
}

.errormsg{
	color:#FF0000;
}

.option_left{
	margin-top:5px;
	margin-bottom:5px;
	width:350px; 
	float:left;
}

.option_right{
	margin-top:5px;
	margin-bottom:5px;
	float:left;
}

em { font-weight: bold; padding-right: 1em; vertical-align: top; }
